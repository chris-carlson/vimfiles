snippet t "single-line standard tag with no attributes"
<${1:name}>$0</$1>
endsnippet

snippet ta "single-line standard tag with attributes"
<${1:name} ${2:attributes}>$0</$1>
endsnippet

snippet tm "multi-line standard tag with no attributes"
<${1:name}>
	$0
</$1>
endsnippet

snippet tam "multi-line standard tag with attributes"
<${1:name} ${2:attributes}>
	$0
</$1>
endsnippet

snippet a "attribute" i
${1:name}="${2:value}"$0
endsnippet

snippet doc "doctype"
<!doctype html>
$0
endsnippet
